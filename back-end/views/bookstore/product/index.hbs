<div id="breadcrumb">
    <div class="container">
        <ul class="breadcrumb">
            <li>
                <a href="/">Home</a>
            </li>
            {{#with product}}
            <li>
                <a href="javascript:;">{{CatName}}</a>
            </li>
            <li class="active">{{Name}}</li>
            {{/with}}
        </ul>
    </div>
</div>

<div id="main-section" class="section">
    <!-- container -->

    <!-- /container -->
    {{#with product}}
    <div class="container">
        <!-- row -->
        <div class="row">
            <!--  Product Details -->
            <div class="product product-details clearfix">
                <div class="col-md-4">
                    <img src="/assets/img/1/{{Picture}}" alt="">
                </div>
                <div class="col-md-8">
                    <div class="product-body">
                        {{#if isSaling}}
                        <div class="product-label">
                            <span class="sale">-{{Sale}}%</span>
                        </div>
                        {{/if}}
                        <h2 class="product-name">{{Name}}</h2>
                        {{#if isSaling}}
                        <h3 class="product-price">{{number_format newPrice}}đ
                            <del class="product-old-price">{{number_format Price}}đ</del>
                        </h3>
                        {{else}}
                        <h3 class="product-price">{{number_format Price}}đ
                        </h3>
                        {{/if}}
                        <div>
                            <div class="product-rating">
                                {{#each Star}}
                                <i class="fa fa-star"></i>
                                {{/each}}
                                {{#each notStar}}
                                <i class="fa fa-star-o empty"></i>
                                {{/each}}
                            </div>
                            <a>{{View}} Lượt Xem</a>
                        </div>
                        <p>
                            <strong>Số Lượng:</strong> {{Amount}} cuốn</p>
                        <p>
                            <strong>Loại:</strong> {{CatName}}</p>
                        <p>
                            <strong>Xuất Xứ:</strong> {{Origin}}</p>
                        <p>
                            <strong>Nhà Xuất Bản:</strong> {{BraName}}</p>
                        <p>{{Description}}</p>
                        <hr>

                        <div class="product-btns">
                            <button class="primary-btn add-to-cart" id="01">
                                <i class="fa fa-shopping-cart"></i> Add to Cart</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /Product Details -->
            {{/with}}
        </div>
        <!-- /row -->
    </div>
</div>

